<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
 version="2.4">

<!-- How to show the value of an attribute that also has its own set of properties  -->
<servlet>
    <servlet-name>Testing Ground</servlet-name>
    <servlet-class>com.example.web.Tester</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>Testing Ground</servlet-name>
    <url-pattern>/Tester.do</url-pattern>
</servlet-mapping>

<!-- Testing the power of brackets [] -->
<servlet>
    <servlet-name>Brackets Test Zone</servlet-name>
    <servlet-class>com.example.web.BracketsNStuff</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>Brackets Test Zone</servlet-name>
    <url-pattern>/Brackets.do</url-pattern>
</servlet-mapping>

<context-param>
    <param-name>mainEmail</param-name>
    <param-value>likewecare@wickedlysmart.com</param-value>
</context-param>
</web-app>